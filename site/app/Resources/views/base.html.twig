<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}DocInTime - Find a Doctor, now.{% endblock %}</title>
        <link rel="icon" href="/assets/images/favicon_dev.png">
        {% block stylesheets %}

            <!-- CSS : Bootstrap (4.0.0-beta.2) -->
            <link rel="stylesheet" href=/assets/css/bootstrap.css>
            <!-- CSS : FontAwesome (4.7.0) -->
            <link rel="stylesheet" href=/assets/css/font-awesome.css>
            <!-- CSS : Our own CSS -->
            <link rel="stylesheet" href=/assets/css/global.css>

        {% endblock %}
    </head>
    <body>
        <header id="header">
            <img src="/assets/images/logo.png" alt="logo" id="logo">
            <nav id="nav">
                <ul>
                    <li><a href="{{ path('default.index') }}">Home</a></li>
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                        <li><a href="#">My Appointments</a></li>
                        <li><a href="{{ path('users.index') }}">My Profile</a></li>
                        {% if app.user.isDoctor %}
                            <li><a href="{{ path('app_doctors_index') }}">Manage appointments</a></li>
                        {% endif %}
                    {% else %}
                        <li><a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a></li>
                        <li><a href="{{ path('fos_user_registration_register') }}">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a></li>
                    {% endif %}
                </ul>
            </nav>
        </header>

        <div class="container">
            {% block content %}{% endblock %}
        </div>

        {% block javascripts %}

            <!-- JS : JQuery (3.2.1) -->
            <script src="/assets/js/jquery-3.2.1.js"></script>
            <!-- JS : Popper -->
            <script src="/assets/js/popper.js"></script>
            <!-- JS : Bootstrap (4.0.0-beta.2) -->
            <script src="/assets/js/bootstrap.js"></script>

            <!-- Custom JS -->
            <script src="/assets/js/app.js"></script>
        {% endblock %}
    </body>
</html>
