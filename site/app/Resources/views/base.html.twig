<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}DocInTime - Find a Doctor, now.{% endblock %}</title>
        <link rel="icon" href="/assets/images/favicon_dev.png">
        {% block stylesheets %}

            <!-- CSS : Bootstrap (4.0.0-beta.2) -->
            <link rel="stylesheet" href=/assets/css/bootstrap.css>
            <!-- CSS : FontAwesome (4.7.0) -->
            <link rel="stylesheet" href=/assets/css/font-awesome.css>
            <!-- CSS : Our own CSS -->
            <link rel="stylesheet" href=/assets/css/global.css>

        {% endblock %}
    </head>
    <body>
        <header id="header">
            <nav id="nav" class="navbar navbar-light bg-dark navbar-expand-md">
                <a class="navbar-brand text-light" href="{{ path('default.index') }}">DocInTime</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <div class="container p-0">
                        <ul class="navbar-nav mr-auto m-0">
                            <li class="nav-item active"><a href="{{ path('default.index') }}" class="nav-link text-light">Home</a></li>
                            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                <li class="nav-item"><a href="#" class="nav-link text-light">My Appointments</a></li>
                                <li class="nav-item"><a href="{{ path('users.index') }}" class="nav-link text-light">My Profile</a></li>
                                {% if app.user.isDoctor %}
                                    <li class="nav-item"><a href="{{ path('user_doctors_index') }}" class="nav-link text-light">Manage appointments</a></li>
                                {% endif %}
                            {% else %}
                                <li class="nav-item"><a href="{{ path('fos_user_security_login') }}" class="nav-link text-light">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a></li>
                                <li class="nav-item"><a href="{{ path('fos_user_registration_register') }}" class="nav-link text-light">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <div id="content" class="container">
            {% block content %}{% endblock %}
        </div>

        <!-- JS : JQuery (3.2.1) -->
        <script src="/assets/js/jquery-3.2.1.js"></script>
        <!-- JS : Popper -->
        <script src="/assets/js/popper.js"></script>
        <!-- JS : Bootstrap (4.0.0-beta.2) -->
        <script src="/assets/js/bootstrap.js"></script>

        <!-- Custom JS -->
        <script src="/assets/js/app.js"></script>

        <script async defer
                src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAsKDPOXJk9M1smvblwa7r-JdNNM8GM6sQ&callback=initMap">
        </script>


        {% block javascripts %}{% endblock %}
    </body>
</html>
