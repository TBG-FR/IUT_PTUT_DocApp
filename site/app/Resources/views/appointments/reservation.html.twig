        {% else %}

            <p>Veuillez vous connecter pour réserver ce RDV (obligation légale : informations de facturation)</p>

        {% endif %}

        <p>
        <h1>[ Afficher Infos Médecin & RDV]</h1><br/>
        {{ appointment.ID }}<br/>
        {{ appointment.Date | date("F jS \\a\\t g:ia") }}<br/>
        {{ appointment.StartTime | date("F jS \\a\\t g:ia") }}<br/>
        {{ appointment.EndTime | date("F jS \\a\\t g:ia") }}<br/>
        {{ appointment.Description }}<br/>
        </p>

        <div class="btn-group">
        <a href="{{ path('appointments.details', {'id': appointment.ID}) }}" role="button" class="btn btn-secondary">Retourner aux détails du RDV</a>

    {% else %}

        <p>[ Bootstrap : Error - No Appointment with this id / No Appointment selected ]</p>
        <div class="btn-group">

