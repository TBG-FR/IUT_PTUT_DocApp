{% extends 'base.html.twig' %}

{% block title %}

    DocInTime - Find a Doctor, now. [Details]

{% endblock %}

{% block content %}

    <a href="{{ path('appointments.details', {'id': appointment.ID}) }}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Primary link</a>
    <a href="{{ path('appointments.details', {'id': appointment.ID}) }}" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">Link</a>

    {% if appointment is defined %}

        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}

            Hi {{ app.user.username }}
            {{ dump(app.user) }}
            {#{ dump(app.user.hasPayment) }#}
            {# TODO : PAIEMENT VIRTUEL #}

        {% else %}

            <p>Veuillez vous connecter pour réserver ce RDV (obligation légale : informations de facturation)</p>

        {% endif %}

        <p>
        <h1>[ Afficher Infos Médecin & RDV]</h1><br/>
        {{ appointment.ID }}<br/>
        {{ appointment.Date | date("F jS \\a\\t g:ia") }}<br/>
        {{ appointment.StartTime | date("F jS \\a\\t g:ia") }}<br/>
        {{ appointment.EndTime | date("F jS \\a\\t g:ia") }}<br/>
        {{ appointment.Description }}<br/>
        </p>

        <div class="btn-group">
        <a href="{#{ path('appointment.reservation', {'id': appointment.ID}) }#}" role="button" class="btn btn-primary">Passer au Paiement</a>
        <a href="{{ path('appointments.details', {'id': appointment.ID}) }}" role="button" class="btn btn-secondary">Retourner aux détails du RDV</a>

    {% else %}

        <p>[ Bootstrap : Error - No Appointment with this id / No Appointment selected ]</p>
        <div class="btn-group">

    {% endif %}

    <a href="{{ path('appointments.results') }}" role="button" class="btn btn-danger">Retourner à la liste des RDVs</a>
    {# TODO : Garder la recherche en mémoire ? Trouver un moyen de revenir à la même recherche ? #}
