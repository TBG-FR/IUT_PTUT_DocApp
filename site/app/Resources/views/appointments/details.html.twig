{% extends 'base.html.twig' %}

{% block title %}

    DocInTime - Find a Doctor, now. [Details]

{% endblock %}

{% block content %}

    {% if appointment is defined %}

        <p>
            <h1>[ Afficher Infos Médecin & RDV]</h1><br/>
            {{ appointment.ID }}<br/>
            {{ appointment.Date | date("F jS \\a\\t g:ia") }}<br/>
            {{ appointment.StartTime | date("F jS \\a\\t g:ia") }}<br/>
            {{ appointment.EndTime | date("F jS \\a\\t g:ia") }}<br/>
            {{ appointment.Description }}<br/>
        </p>

        <a href="{{ path('appointments.reservation', {'id': appointment.ID}) }}" class="btn btn-primary">Réserver ce RDV</a>

    {% else %}

        <p>[ Bootstrap : Error - No Appointment with this id / No Appointment selected ]</p>

    {% endif %}

    <a href="{{ path('appointments.results') }}" class="btn btn-danger">Retourner à la liste des RDVs</a>
    {# TODO : Garder la recherche en mémoire ? Trouver un moyen de revenir à la même recherche ? #}

{% endblock %}