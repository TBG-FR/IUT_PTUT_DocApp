{% extends "base.html.twig" %}
{% form_theme form _self %}
{% block title %}

    {# DocInTime - Find a Doctor, now. [Appointments - Add Multiple] #}
    DocInTime - Trouver un Docteur, maintenant. [Rendez-vous - Ajout Multiple]

{% endblock %}

{% block page_title %}

    <h1 class="page_title">Ajout d'une Plage de Rendez-vous (plusieurs créneaux)</h1>

{% endblock %}

{% block content %}

    <div class="create_multiple form">

        {{ form_start(form,{'attr':{'class':'form-horizontal'}},{'id': 'form_multiple'}) }}
        {{ form_errors(form) }}

        <div class="row">
            <div class="col">
                <div class="date txt">
                {{ form_label(form.date) }} :
                </div>
                <div class="date field">
                {{ form_widget(form.date) }}
                </div>
            </div>
        </div>
        <div class="mettrepadd">
            <div class="row settings">
                <div class="col">
                    {{ form_row(form.startTime) }}
                </div>
                <div class="col centre">
                    <div>
                    {{ form_row(form.NbCrenaux,{'attr':{'value': 0}}) }}
                    </div>
                </div>

                <div class="col droite">
                    <div class="textebas">
                    Durée crénaux :
                    </div>
                    <div class="putInline">
                        {{ form_widget(form.DureeCrenaux.hours) }}
                    </div>
                    :
                    <div class="putInline">
                        {{ form_widget(form.DureeCrenaux.minutes) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <div class="textefin">
                <strong>Heure de fin :</strong>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-4">
            </div>
            <div class="col-2 heure">

                {{ form_row(form.endTimeHour) }}
            </div>
            <div class="col-2 minute">
                {{ form_row(form.endTimeMinute) }}
            </div>
            <div class="col-4">
            </div>
        </div>

        <div class="row">
            <div class="col">
                {{ form_row(form.specialities) }}
            </div>
        </div>

        <div class="row">
            <div class="col">
                {{ form_row(form.description) }}
            </div>
        </div>

        <div class="row">
            <div class="col">
                {{ form_row(form.office) }}
            </div>
        </div>

        <div class="row">
            <div class="col">
                {{ form_row(form.submit) }}
            </div>
        </div>

        {{ form_rest(form) }}
        {{ form_end(form) }}

    </div>

{% endblock %}



