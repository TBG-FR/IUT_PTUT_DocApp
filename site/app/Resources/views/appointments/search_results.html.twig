{% block content %}

    {% for appointment in appointments %}
        <div class="result">
        <div class="row">
            <div class="col-8">
                <a class="lien" href="{{ path('appointments.details', { 'id': appointment.id }) }}">
                    <div class="element">
                        <div class="image">
                            <img class="img-fluid img-thumbnail" src="/assets/images/profil.png" alt="Card image cap">
							
                        </div>
                        <div class="content">
                            <div class="float-left">
                                <div class="name">
                                    Dr. {{ appointment.doctor.lastName }}
                                </div>
                                <div class="spe">
                                    {% set doctor_specialities = [] %}

                                    {% for speciality in appointment.doctor.specialities %}
                                        {% set doctor_specialities = doctor_specialities|merge([speciality.name]) %}
                                    {% endfor %}
                                    {{ doctor_specialities|join(' - ')}}
                                </div>
                            </div>
                            <div class="float-right">
                                <div class="hour">
                                    {{ appointment.startTime|date('H:i') }}
                                </div>
                                <div class="distance">
                                    {{ appointment.distanceToUser|round(1,'floor') }} km
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-4">
                FUTURE CARTE
            </div>
			
        </div>
    </div>
    {% endfor %}
	
{% endblock %}