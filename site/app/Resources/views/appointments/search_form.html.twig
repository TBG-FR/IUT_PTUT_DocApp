{% block content %}

    <form action="/search" method="POST" id="search_form">

        <div class="form-group">
            <label for="doctorType">What type of doctor are you searching for ?</label>
            <select class="form-control" id="doctorType" aria-describedby="doctorTypeHelp" >
                <option>Dentist</option>
                <option>Generalist</option>
                <option>Psy</option>
                <option>Urologist</option>
                <option>Anaesthetist</option>
            </select>
            <small id="doctorTypeHelp" class="form-text text-muted">What type of doctor are you searching for ?</small>
        </div>

        <div class="form-group">
            <label for="location">Where ?</label>
            <input type="text" class="form-control" id="location" aria-describedby="locationHelp" placeholder="Enter a city name, a zip code, ...">
            <button type="button">ICON LOCATE ME</button>
            <small id="locationHelp" class="form-text text-muted">Where ?</small>
        </div>

        <div class="form-group container">
            <div class="row">
                <div class='col-sm-6'>
                    <input type='text' class="form-control" id='datetime' />
                </div>
                <script type="text/javascript">
                    $(function () {
                        $('#datetime').datetimepicker();
                    });
                </script>
            </div>
        </div>

        <div class="form-group">
            <label for="hour">When ?</label>
            <input type="text" class="form-control" id="hour" aria-describedby="hourHelp" placeholder="Enter the desired hour for your appointment">
            <small id="hourHelp" class="form-text text-muted">When ?</small>
        </div>

        <button type="submit" class="btn btn-primary">ICON LAUNCH SEARCH</button>

    </form>

{% endblock %}